<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_community_ticket_form" model="ir.ui.view">
        <field name="name">community.ticket.form</field>
        <field name="model">community.ticket</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="ai_mock_mode" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_toggle_demo_mode"
                                type="object"
                                class="oe_stat_button">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">AI Demo</span>
                                <span class="o_stat_text">
                                    <field name="ai_mock_mode" widget="boolean_toggle"/>
                                </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="description"/>
                            <field name="spoc_name"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="ai_priority"/>
                            <field name="ai_needs_review"/>
                            <field name="ai_confidence"/>
                            <field name="ai_summary"/>
                            <field name="ai_suggested_reply"/>
                        </group>
                        <group>
                            <field name="ai_error" attrs="{'invisible': [('ai_error','=','')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_community_ticket_tree" model="ir.ui.view">
        <field name="name">community.ticket.tree</field>
        <field name="model">community.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="ai_priority"/>
                <field name="ai_needs_review"/>
            </tree>
        </field>
    </record>
    <record id="action_community_ticket" model="ir.actions.act_window">
        <field name="name">Ticket</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">community.ticket</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_community_tickets"
         name="Tickets"
         parent="menu_community_ticket_root"
         action="action_community_ticket"
         sequence="10"/>
</odoo>